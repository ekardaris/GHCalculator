<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nableamea.ghcalculator.GHDActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Σωματικό βάρος (kg)"
                    android:id="@+id/textView8"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weightSpinner"
                    android:popupBackground="#ffffff"
                    android:gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Συνιστώμενη ημερήσια δόση (mg)"
                    android:id="@+id/textView10"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ghdDosageTextView"
                    android:layout_marginLeft="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Συνιστώμενη εβδομαδιαία δόση (mg)"
                    android:id="@+id/textView12"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ghdWeekDoseTextView"
                    android:layout_marginLeft="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp" />

            </GridLayout>

            <TextView
                style="?android:listSeparatorTextViewStyle"
                android:background="#d3d3d3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Επιλογή GH προϊόντος"
                android:background="@drawable/button_effect"
                android:id="@+id/ghProductButton"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ghd_note_one"
                android:textSize="12dp"
                android:textColor="#4d6b9e"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ghd_note_two"
                android:textSize="12dp"
                android:textColor="#4d6b9e"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ghd_note_three"
                android:layout_marginTop="30dp"
                android:textColor="#4d6b9e"
                android:textSize="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tableLayout">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4ab9ed">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Ένδειξη"
                        android:id="@+id/cell1"
                        android:textColor="#4d6b9e"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="mg/kg σωματικού\n βάρους / ημέρα"
                        android:id="@+id/cell2"
                        android:textColor="#4d6b9e"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/cell3"
                        android:textColor="#4d6b9e"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:gravity="center_vertical|center_horizontal" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="GHD"
                        android:id="@+id/cell4"
                        android:textColor="#4d6b9e"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="0,025-0,035"
                        android:id="@+id/cell5"
                        android:textColor="#4d6b9e"
                        android:layout_weight="2"
                        android:gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="0,7-1,0"
                        android:id="@+id/cell6"
                        android:textColor="#4d6b9e"
                        android:layout_weight="2"
                        android:gravity="center_vertical|center_horizontal" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="PWS"
                        android:id="@+id/cell7"
                        android:textColor="#4d6b9e"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0,035"
                        android:id="@+id/cell8"
                        android:textColor="#4d6b9e"
                        android:layout_weight="2"
                        android:gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="1,0"
                        android:id="@+id/cell9"
                        android:textColor="#4d6b9e"
                        android:layout_weight="2"
                        android:gravity="center_vertical|center_horizontal" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="SGA"
                        android:id="@+id/cell10"
                        android:textColor="#4d6b9e"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0,035"
                        android:id="@+id/cell11"
                        android:textColor="#4d6b9e"
                        android:layout_weight="2"
                        android:gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="1,0"
                        android:id="@+id/cell12"
                        android:textColor="#4d6b9e"
                        android:layout_weight="2"
                        android:gravity="center_vertical|center_horizontal" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
